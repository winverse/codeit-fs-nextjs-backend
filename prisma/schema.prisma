generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Movie {
  id          String  @id @default(ulid()) // 내부 관리용 고유 ID (ULID)
  tmdbId      Int     @unique // 외부(TMDB) ID
  title       String
  overview    String?
  posterPath  String?
  releaseDate String?
  voteAverage Float?

  reviews Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id      String @id @default(ulid()) // 리뷰 ID (ULID)
  content String
  rating  Int // 1-5 stars
  author  String // 간단히 문자열로 처리
  movie   Movie  @relation(fields: [movieId], references: [id], onDelete: Cascade)
  movieId String // Movie.id (ULID)를 참조

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
